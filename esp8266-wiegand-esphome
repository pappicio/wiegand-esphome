      sorting_weight: 9
    id: spesa_da_prendere
    optimistic: true
    lambda: return id(spesa_da_prendere).state;  
    on_turn_on: 
      then:
        - delay: 1s
        - switch.turn_off: spesa_da_prendere


  - platform: gpio
